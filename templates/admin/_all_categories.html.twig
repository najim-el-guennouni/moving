{% if editCategory.parent is defined and editCategory.parent == null %}

	<option selected value="0">No parent</option>
{% else %}
	<option value="0">No parent</option>
{% endif %}
{% for category in categories.categorylist %}

	{% if editCategory.parent.getId() is defined and editCategory.parent.getId() == category.id%}
		<option selected value="{{category.id}}">{{category.name}}</option>
	{% else %}
		<option value="{{category.id}}">{{category.name}}</option>
	{% endif %}
{% endfor %}
